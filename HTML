<body>
  <h1>Meyve E≈üle≈ütir</h1>
  <div id="game"></div>
  <div id="slot"></div>
  <button onclick="resetGame()">Yeniden Ba≈üla</button>

  <script>
    const fruits = ["üçì", "üçé", "üçá", "üçâ", "üçã", "üçä", "ü•ù", "üçç", "ü•≠"];
    const slot = [];
    const gameEl = document.getElementById("game");
    const slotEl = document.getElementById("slot");

    let tiles = [];

    function createTiles() {
      gameEl.innerHTML = "";
      tiles = [];

      let selected = [];
      for (let i = 0; i < 3; i++) {
        const fruit = fruits[Math.floor(Math.random() * fruits.length)];
        selected.push(fruit, fruit, fruit);
      }
      selected = selected.sort(() => 0.5 - Math.random());

      selected.forEach((fruit) => {
        const tile = document.createElement("div");
        tile.className = "tile";
        tile.textContent = fruit;
        tile.addEventListener("click", () => onTileClick(tile));
        tiles.push(tile);
        gameEl.appendChild(tile);
      });
    }

    function onTileClick(tile) {
      if (slot.length >= 7) return;

      const newTile = document.createElement("div");
      newTile.className = "slot-tile";
      newTile.textContent = tile.textContent;
      slotEl.appendChild(newTile);
      slot.push(tile.textContent);

      tile.remove();

      checkMatch();
    }

    function checkMatch() {
      const counts = {};
      slot.forEach(fruit => {
        counts[fruit] = (counts[fruit] || 0) + 1;
      });

      for (let fruit in counts) {
        if (counts[fruit] === 3) {
          // 3 e≈üle≈ütiyse, slot'tan sil
          const newSlot = [];
          slotEl.innerHTML = "";
          let removed = 0;
          slot.forEach(f => {
            if (f === fruit && removed < 3) {
              removed++;
            } else {
              newSlot.push(f);
              const tile = document.createElement("div");
              tile.className = "slot-tile";
              tile.textContent = f;
              slotEl.appendChild(tile);
            }
          });
          slot.length = 0;
          newSlot.forEach(f => slot.push(f));
        }
      }
    }

    function resetGame() {
      slot.length = 0;
      slotEl.innerHTML = "";
      createTiles();
    }

    createTiles();
  </script>
</body>
</html>
