      align-items: center;
      justify-content: center;
      cursor: pointer;
    }
    #slot {
      display: flex;
      gap: 10px;
      margin-top: 20px;
    }
    .slot-tile {
      width: 80px;
      height: 80px;
      border: 2px dashed #a39a8b;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
